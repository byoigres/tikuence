    "version": "0.2.0",
    "configurations": [
      {
            "name": "Debug Typescript Linux/macOS",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "address": "localhost",
            "port": 9229,
            "restart": true,
            "sourceMaps": false,
            "localRoot": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tikuence Server",
            "args": [
                "${workspaceFolder}/src/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "localRoot": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}